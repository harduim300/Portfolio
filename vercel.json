{
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "script-src 'self' https://www.google.com/recaptcha/ https://www.gstatic.com/recaptcha/ https://vercel.live"
        }
      ]
    }
  ],
  "rewrites": [
    { "source": "/", "destination": "/" },
    { "source": "/politica-de-privacidade", "destination": "/politica-de-privacidade" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}